<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>EcoBarter</title>
    <link rel="stylesheet" href="/styles/style.css" />
    <!-- CSS only -->

    <!-- <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    /> -->
  </head>
  <body>
    <div class="layout">
      <nav>
        <img src="/images/ecobartelogo.png" alt="" />
        <h2 id="title">EcoBarter</h2>
        <a class="link-layout" href="/home">Home</a>
        <a class="link-layout" href="/">About us</a>
        {{#if user}}
          <a id="profile-view" href="/profile/{{user.id}}">{{user.name}}'s
            Profile</a>
          <form action="/authentication/sign-out" method="POST">
            <button id="sign-out-profile">Sign Out</button>
          </form>
        {{else}}
          <a class="link-layout" href="/authentication/sign-in">Sign In</a>
          <a class="link-layout" href="/authentication/sign-up">Sign Up</a>
        {{/if}}
      </nav>
      {{{body}}}
      <script src="/scripts/script.js"></script>
    </div>

  </body>
</html>