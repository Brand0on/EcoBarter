<form
  action="/authentication/sign-up"
  method="POST"
  enctype="multipart/form-data"
>
  <label for="input-name">Name</label>
  <input type="text" id="input-name" name="name" placeholder="Your Name" />

  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" placeholder="Your Email" />

  <label for="input-username">Username</label>
  <input
    type="text"
    id="input-username"
    name="username"
    placeholder="A unique username"
  />
  <label for="input-image">Profile Image <small>(optional)</small> </label>
  <input type="file" name="image" id="input-image" />

  <label for="input-password">Password</label>
  <input
    type="password"
    name="password"
    id="input-password"
    placeholder="A Strong Password"
  />

  <button id="sign-up">Sign Up</button>
</form>